alias ugz='tar zxvf'
alias gz='tar zxcf'
alias ubz='tar bxvf'
alias bz='tar bcvf'

# update-alternatives
alias ua='update-alternatives'
alias ua-set='update-alternatives --set'


# mkdirs
alias mkdirs='mkdir -p'


