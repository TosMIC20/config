# some more ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias vi='vim'

# git aliases
alias g='git'
alias gaa='git add --all'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias gc!='git commit -v --amend'
alias grh='git reset --hard'
alias gm='git merge'
alias gcm='git checkout $(git_main_branch)'
alias gcd='git checkout $(git_develop_branch)'
alias gs='git status'

